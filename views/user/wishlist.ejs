<%- include('./partials/userHeader.ejs') %>
<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb__links">
          <a href="./index.html"><i class="fa fa-home"></i> Home</a>
          <span>Wihlist cart</span>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Breadcrumb End -->
<% if (wishProducts) { %> <% if (wishProducts.myWishlist.length > 0 ) { %>

<section class="shop-cart spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="shop__cart__table">
          <table>
            <thead>
              <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Add to Cart</th>
              </tr>
            </thead>
            <tbody>
              <% wishProducts.myWishlist.forEach((p) => { %>

              <tr>
                <td class="cart__product__item">
                  <img
                    src="/images/productImages/<%=p.ProductId.image[0]%>"
                    style="width: 30%"
                    alt="wishlist image"
                  />
                  <div class="cart__product__item__title">
                    <h6 style="margin-top: 75px"><%=p.name%></h6>
                    <div class="rating">
                      <i class="fa fa-star"></i>
                      <i class="fa fa-star"></i>
                      <i class="fa fa-star"></i>
                      <i class="fa fa-star"></i>
                      <i class="fa fa-star"></i>
                    </div>
                  </div>
                </td>
                <td class="cart__price">â‚¹ <%=p.ProductId.price%></td>

                <td class="cart__total" style="width:161px !important ;">
                  <div class="cart__btn" style="margin-top: 45px;">
                    <a
                      href="/"
                      onclick="addTocart('<%p.ProductId._id%>','<%=p.name%>','<%=p.ProductId.price%>')"
                      >Add to Cart</a
                    >
                  </div>
                </td>
                <td class="cart__close">
                  <a href="/removeWishlist/<%=p._id%>"
                    ><span class="icon_close"></span
                  ></a>
                </td>

                <!-- <td class="cart__close"><span class="icon_close"></span></td> -->
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6 col-md-6 col-sm-12">
        <div class="cart__btn">
          <a href="/">Continue Shopping</a>
        </div>
      </div>
    </div>
  </div>
</section>

<% }else{ %>
<div class="container">
  <div class="row text-center">
    <div class="col-md-12 mt-5">
      <div>
        <img src="/images/product/noWishlist.jpg" style="width: 44%" alt="" />
      </div>
      <div class="">
        <div class="cart__btn">
          <a href="/">Continue Shopping</a>
        </div>
      </div>
    </div>
  </div>
</div>
<% } %> <% }else { %>
<div class="container">
  <div class="row text-center">
    <div class="col-md-12 mt-5">
      <div>
        <img src="/images/product/noWishlist.jpg" style="width: 44%" alt="" />
      </div>
      <div>
        <div class="cart__btn">
          <a href="/">Continue Shopping</a>
        </div>
      </div>
    </div>
  </div>
</div>
<% } %> <%- include('./partials/userFooter.ejs') %>
