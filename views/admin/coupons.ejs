<%- include('./partials/admin-dash.ejs') %>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="card mt-4 m-3">
  <h5 class="card-header">Products</h5>

  <div class="w-100 text-center p-1 text-white bg-info">
    <h5>COUPONS</h5>
  </div>
  <!-- Coupon start -->
  <!-- Button trigger modal -->
  <a
    class="w-25 m-3 btn btn-success block-btn font-weight-bold"
    data-bs-toggle="modal"
    data-bs-target="#staticBackdrop"
  >
    ADD COUPON
  </a>

  <!-- Modal -->
  <div
    class="modal fade"
    id="staticBackdrop"
    data-bs-backdrop="static"
    data-bs-keyboard="false"
    tabindex="-1"
    aria-labelledby="staticBackdropLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title" id="staticBackdropLabel">Create Coupon</h1>
        </div>
        <div class="modal-body">
          <form action="/admin/add_coupon" method="post">
            <div class="form-group">
              <label class="text-dark font-weight-bold m-0" for=""
                >Coupon Name</label
              >
              <input
                type="text"
                class="form-control border pe-2 ps-2"
                id=""
                placeholder="Coupon Name"
                name="couponName"
                required
              />
            </div>

            <div class="form-group">
              <label class="text-dark font-weight-bold m-0" for=""
                >Coupon Description</label
              >
              <input
                type="text"
                class="form-control border pe-2 ps-2"
                id=""
                placeholder="Coupon Description"
                name="couponDes"
                required
              />
            </div>

            <div class="form-group">
              <label class="text-dark font-weight-bold m-0" for=""
                >Coupon Code</label
              >
              <input
                type="text"
                class="form-control border pe-2 ps-2"
                id=""
                placeholder="Coupon Code"
                name="couponCode"
                required
              />
            </div>

            <div class="form-group">
              <label class="text-dark font-weight-bold m-0" for=""
                >Percentage</label
              >
              <input
                type="number"
                class="form-control border pe-2 ps-2"
                id=""
                placeholder="Coupon amount"
                name="percentage"
                required
              />
            </div>

            <div class="row">
              <div class="col-6">
                <div class="form-group">
                  <label class="text-dark font-weight-bold m-0" for=""
                    >Min.Cart Amount</label
                  >
                  <input
                    type="number"
                    class="form-control border pe-2 ps-2"
                    id=""
                    placeholder="Min.Cart Amount"
                    name="minCartAmount"
                    required
                  />
                </div>
              </div>
              <div class="col-6">
                <div class="form-group">
                  <label class="text-dark font-weight-bold m-0" for=""
                    >Max.Radeem Amount</label
                  >
                  <input
                    type="number"
                    class="form-control border pe-2 ps-2"
                    id=""
                    placeholder="Min.Radeem Amount"
                    name="maxRadeemAmount"
                    required
                  />
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label class="text-dark font-weight-bold m-0" for=""
                    >Start Date</label
                  >
                  <input
                    type="date"
                    class="form-control border pe-2 ps-2"
                    id=""
                    placeholder="start date"
                    name="startDate"
                    required
                  />
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label class="text-dark font-weight-bold m-0" for=""
                    >Expiry Date</label
                  >
                  <input
                    type="date"
                    class="form-control border pe-2 ps-2"
                    id=""
                    placeholder="expiry date"
                    name="expiryDate"
                    required
                  />
                </div>
              </div>
            </div>

            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >
                Close
              </button>
              <button type="submit" class="btn btn-primary font-weight-bold">
                Create Coupon
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <% if (Coupon) { %>
  <div class="table-responsive text-nowrap">
    <table class="table">
      <thead class="table-dark">
        <tr>
          <th>Sl</th>
          <th>Coupon Name</th>
          <th>Coupen Code</th>
          <th>Coupen Perscentage</th>
          <th>Expiry Date</th>
          <th>Min. Cart Amount</th>
          <th>Max. Radeem Amount</th>
          <th>Option</th>
        </tr>
      </thead>
      <tbody class="table-border-bottom-0">
        <% Coupon.forEach(function(coupon,i){ %>

        <tr>
          <td><%=i+1%></td>
          <td><%=coupon.couponName%></td>
          <td><%=coupon.couponCode%></td>
          <td><%=coupon.percentage%></td>
          <td><%=coupon.date%></td>
          <td><%=coupon.minCartAmount%></td>
          <td><%=coupon.maxRadeemAmount%></td>
          <td class="d-flex">
            <a
              class="btn btn-danger block-btn"
              onclick="deleteCoupon('<%=coupon._id%>')"
              >Delete</a
            >
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <%} else { %>
  <p>Coupon Empty</p>
  <% } %>
</div>
<script>
  function deleteCoupon(id) {
    console.log(id, "deleted id");
    Swal.fire({
      title: "Are you sure?",
      text: "You won't be able to revert this!",
      icon: "warning",
      customClass: "swal-wide",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Yes, Block it!",
    }).then((result) => {
      if (result.isConfirmed) {
        location.href = `/admin/delete_coupon?id=${id}`;
        Swal.fire("Blocked!", "This Coupon is deleted.", "success").then(
          (result) => {
            location.reload();
          }
        );
      }
    });
  }
</script>

<%- include('./partials/admin-footer.ejs') %>
