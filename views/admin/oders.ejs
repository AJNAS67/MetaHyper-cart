<%- include('./partials/admin-dash.ejs') %>

<div class="card mt-4 m-3">
  <h5 class="card-header">Products</h5>
  <div class="table-responsive text-nowrap">
    <table class="table">
      <thead class="table-dark">
        <tr>
          <th>Order ID</th>
          <th>Name</th>
          <th>Amount</th>
          <th>Payment Mode</th>
          <th>Payment status</th>
          <th>Track</th>
          <th></th>
          <th>Details</th>
        </tr>
      </thead>
      <tbody class="table-border-bottom-0">
        <% for( let i = 0; i < result.length; i++ ) { %>

        <tr>
          <th scope="row"><%= result[i]._id %></th>
          <td><%= result[i].deliveryAddress.firstName %></td>
          <td>â‚¹ <%= result[i].total %></td>
          <td><%= result[i].paymentMethod %></td>
          <td><%= result[i].paymentStatus %></td>

          <td>
            <select
              style="background-color: yellow; text-size-adjust: 12px"
              name="track"
              id="track<%= i %>"
            >
              <option value="<%= result[i].orderStatus %>" selected>
                <%= result[i].track %>
              </option>
              <option value="Cancellede">Cancellede</option>
              <option value="orderconfirmed">orderconfirmed</option>
              <option value="Shipped">Shipped</option>
              <option value="Delivered">Delivered</option>
              <option value="Out For Delivery">Out For Delivery</option>
            </select>
          </td>
          <td>
            <button
              type="button"
              id="changetrack"
              class="btn btn-primary btn-sm"
              onclick="orderStatus('<%= result[i]._id %>','<%= i %>')"
            >
              Change
            </button>
          </td>

          <td>
            <!-- Button trigger modal -->
            <button
              type="button"
              class="btn btn-primary"
              data-toggle="modal"
              data-target="#exampleModalLong"
            >
              View details
            </button>

            <!-- Modal -->
            <div
              class="modal fade"
              id="exampleModalLong"
              tabindex="-1"
              role="dialog"
              aria-labelledby="exampleModalLongTitle"
              aria-hidden="true"
            >
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5
                      class="modal-title"
                      id="exampleModalLongTitle"
                      style="color: black"
                    >
                      Order Details
                    </h5>
                    
                  </div>
                  <div class="modal-body col-lg-12" id="invoice">
                    <div class="row order_d_inner">

                      <table class="table table-borderless">
                        <thead>
                          <tr>
                            <th scope="col"></th>
                            <th scope="col"></th>
                          </tr>
                        </thead>
                        <tbody>
                          <tr>
                            <td>Ordered Date</td>
                            <td><%=result[i].createdAt%></td>
                          </tr>

                          <tr>
                            <td>User Deyails</td>
                            <td>
                              Name - <%=result[i].deliveryAddress.firstName%>
                              ;Mob.Number -
                              <%=result[i].deliveryAddress.mobNumber%>
                              <br />Address -
                              <%=result[i].deliveryAddress.homeaddress%>
                              <br />state - <%=result[i].deliveryAddress.state%>
                              ;city - <%=result[i].deliveryAddress.city%>
                            </td>
                          </tr>
                          <tr>
                            
                          </tr>
                          <tr>
                            <td>Product Details</td>

                          <% for (var j =1; j <=result[i].products.length; j++ )
                          { %>
                          
                            <td>
                              Name -<%=result[i].products[j-1].name%> ; Price
                              -<%=result[i].products[j-1].price%> ; Quantity
                              -<%=result[i].products[j-1].quantity%>
                            </td>
                            <% } %>
                          </tr>
                        </tbody>
                      </table>

                     
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button
                      type="button"
                      class="btn btn-secondary"
                      data-dismiss="modal"
                    >
                      Close
                    </button>
                    <button
                      type="button"
                      id="download-button"
                      class="btn btn-primary"
                    >
                      save as PDF
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

