<script>
  function orderStatus(e, i) {
    const oid = e;
    const value = $(`#track${i}`).find(":selected").val();
    console.log(oid, value);
    //alert(`oid = ${oid}`);
    //alert(`value = ${value}`);

    $.ajax({
      url: "/admin/order-status",
      data: {
        oid,
        value,
      },
      method: "post",
      success: (response) => {
        if (response.status) {
          Swal.fire({
            position: "top-end",
            icon: "success",
            title: "Track statuse has been changed",
            showConfirmButton: false,
            timer: 1000,
          });
        }
      },
    });
  }
</script>

