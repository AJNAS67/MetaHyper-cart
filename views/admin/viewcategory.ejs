<%- include('./partials/admin-dash.ejs') %>

<div class="card mt-4 m-3">
  <h5 class="card-header">Category</h5>
  <div class="text-nowrap">
    <table class="table">
      <thead class="table-dark">
        <tr>
          <th>sl</th>
          <th>Category</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody class="table-border-bottom-0">
        <% category.forEach(function(cat,i){ %>

        <tr>
          <td><%=i+1%></td>
          <td>
            <i class="fab fa-angular fa-lg text-danger me-3"></i>
            <strong><%=cat.category%></strong>
          </td>
            
          <td>
            <div class="dropdown">
              <button
                type="button"
                class="btn p-0 dropdown-toggle hide-arrow"
                data-bs-toggle="dropdown"
              >
                <i class="bx bx-dots-vertical-rounded"></i>
              </button>
              <div class="dropdown-menu">
                <form
                  action="/admin/editCategory/<%=cat._id %>"
                  method="post"
                  id="edit_form"
                >
                  <a
                    class="dropdown-item"
                    onclick="document.getElementById('edit_form').submit()"
                    ;
                    ><i class="bx bx-edit me-1"></i> Edit</a
                  >
                </form>
                <form
                  action="/admin/deleteCategory/<%=cat._id %>"
                  method="post"
                  id="delete_form"
                >
                  <a
                    class="dropdown-item"
                    onclick="document.getElementById('delete_form').submit()"
                    ;
                    ><i class="bx bx-trash me-1"></i> Delete</a
                  >
                </form>
              </div>
            </div>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
<!--/ Bootstrap Table with Header Dark -->

<%- include('./partials/admin-footer.ejs') %>
